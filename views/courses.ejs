<!-- Available Courses Container -->
<div>
    <h2 class="text-xl font-semibold mb-4">Available Courses</h2>
    <!-- List of Available Courses -->
    <% for( var i=0; i < courses.length; i++) { %>
        <div class="">
            <div class="bg-white p-4 m-8 rounded-md w-1/3">
                <h3 class="text-lg font-semibold mb-2">
                    <%= courses[i].name%>
                </h3>
                <p>
                    <%= courses[i].description %>
                </p>
                <div class="flex justify-between">
                    <!-- Enroll Box -->
                    <div
                        class="w-40 h-12 bg-blue-400 text-white rounded-md px-2 py-3 m-5 cursor-pointer hover:bg-blue-600 transition duration-300">
                        <a href="/enroll/<%=courses[i].id %>" class="block text-center">
                            <h3 class="text-sm font-semibold mb-2">Enroll Course</h3>
                        </a>
                    </div>
                    <!-- View Box -->
                    <div
                        class="w-40 h-12 bg-blue-400 text-white rounded-md px-2 py-3 m-5 cursor-pointer hover:bg-blue-400 transition duration-300">
                        <a href="/courseindexs/<%=courses[i].id %>" class="block text-center">
                            <h3 class="text-sm font-semibold mb-2">View Course</h3>
                        </a>
                    </div>
                </div>

            </div>
        </div>
        <% } %>
</div>