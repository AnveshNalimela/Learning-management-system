<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Viewer</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>

<body class="bg-blue-100 flex items-center justify-center h-screen">

    <div class="container mx-auto p-8 bg-white shadow-md rounded-md">
        <!-- Left Side: List of Chapters -->
        <div class="w-1/2 pr-8">
            <h2 class="text-4xl font-semibold mb-8 text-center">
                <%= course.name %>
            </h2>

            <!-- Chapter List with Completion Status -->
            <ul>
                <% for(var i=0; i < chapters.length; i++) { %>
                    <li class="flex items-center mb-6">

                        <div class="flex-grow">
                            <a href="/chapterindex/<%= chapters[i].id %>" <p class="text-lg font-semibold mt-2 mb-2">
                                Chapter <%= i + 1 %> : <%= chapters[i].name %>
                                        </p></a>
                        </div>
                    </li>
                    <% } %>
            </ul>
        </div>
    </div>
</body>


</html>