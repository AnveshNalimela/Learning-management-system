<!-- Enrolled Courses Container -->
<div class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Enrolled Courses</h2>
    <% for( var i=0; i < enrolledCourses.length; i++) { %>
        <!-- List of Enrolled Courses -->
        <div class="">
            <div class="bg-white p-4 m-8 rounded-md w-1/3">
                <h3 class="text-lg font-semibold mb-2">
                    <%= i %> :<%= enrolledCourses[i].name %>
                </h3>
                <p>
                    <%= enrolledCourses[i].description %>
                </p>
                <div
                    class="w-40 h-12 bg-blue-400 text-white rounded-md px-2 py-3 m-5 cursor-pointer hover:bg-blue-600 transition duration-300">
                    <a href="/courseindexs/<%=enrolledCourses[i].id %>" class="block text-center">
                        <h3 class="text-sm font-semibold mb-2">Start Course</h3>
                    </a>

                </div>

            </div>
            <% } %>
        </div>