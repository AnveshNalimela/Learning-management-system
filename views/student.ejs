<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Homepage</title>
    <!-- Include Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-blue-100">
    <%- include('header.ejs') %>

        <a href="/signout"
            class="inline-block px-4 py-2 mt-4 bg-blue-500 text-white rounded transition duration-300 hover:bg-blue-600">
            Sign Out
        </a>
        <a href="/password"
            class="bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600 transition duration-300">
            Change Password
        </a>

        <!-- Student Homepage Container -->
        <div class="container mx-auto p-8">

            <!-- Student Icon and Details -->
            <div class="flex justify-end items-center mb-4">
                <img src="https://cdn-icons-png.flaticon.com/512/9257/9257174.png" alt="Student Icon"
                    class="w-8 h-8  rounded mr-2">
                <div>
                    <p class="font-semibold text-gray-800">
                        <%= studentName %>
                    </p>
                    <p class="text-gray-600">Student ID: STU<%=studentId %>
                    </p>
                </div>
            </div>

            <!-- Welcome Message -->
            <h1 class="text-3xl font-semibold mb-6">Welcome, <%= studentName %>!</h1>
            <!-- Enrolled Courses Container -->
            <div class="mb-8">
                <h2 class="text-xl font-semibold mb-4">Enrolled Courses</h2>
                <% for( var i=0; i < enrolledCourses.length; i++) { %>
                    <!-- List of Enrolled Courses -->
                    <div class="">
                        <div class="bg-white p-4 m-8 rounded-md w-1/3">
                            <h3 class="text-lg font-semibold mb-2">
                                <%= i+1 %> : <%= enrolledCourses[i].name %>
                            </h3>
                            <p>
                                <%= enrolledCourses[i].description %>
                            </p>
                            <div
                                class="w-40 h-12 bg-blue-400 text-white rounded-md px-2 py-3 m-5 cursor-pointer hover:bg-blue-600 transition duration-300">
                                <a href="/scourse/<%=enrolledCourses[i].id%>" class="block text-center">
                                    <h3 class="text-sm font-semibold mb-2">Start Course</h3>
                                </a>

                            </div>

                        </div>
                        <% } %>
                    </div>



                    <!-- Available Courses Container -->
                    <div>
                        <h2 class="text-xl font-semibold mb-4">Available Courses</h2>
                        <!-- List of Available Courses -->
                        <% for( var i=0; i < availcourses.length; i++) { %>
                            <div class="">
                                <div class="bg-white p-4 m-8 rounded-md w-1/3">
                                    <h3 class="text-lg font-semibold mb-2">
                                        <%= availcourses[i].name%>
                                    </h3>
                                    <p>
                                        <%= availcourses[i].description %>
                                    </p>
                                    <div class="flex justify-between">
                                        <!-- Enroll Box -->
                                        <div
                                            class="w-40 h-12 bg-blue-400 text-white rounded-md px-2 py-3 m-5 cursor-pointer hover:bg-blue-600 transition duration-300">
                                            <a href="/enrollCourse/<%=availcourses[i].id %>" class="block text-center">
                                                <h3 class="text-sm font-semibold mb-2">Enroll Course</h3>
                                            </a>
                                        </div>
                                        <!-- View Box -->
                                        <div
                                            class="w-40 h-12 bg-blue-400 text-white rounded-md px-2 py-3 m-5 cursor-pointer hover:bg-blue-400 transition duration-300">
                                            <a href="/viewCourse/<%=availcourses[i].id %>" class="block text-center">
                                                <h3 class="text-sm font-semibold mb-2">View Course</h3>
                                            </a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <% } %>
                    </div>
                    <%- include('footer.ejs') %>
</body>

</html>