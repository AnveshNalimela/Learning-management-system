<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Educator Homepage</title>
    <!-- Include Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-blue-100">
    <%- include('header.ejs') %>
        <nav>
            <h1 class="text-2xl inline-block font-semibold mt-8 ml-10 px-6 ">Welcome, <%= name %>!</h1>

            <div class="flex justify-end  inline-block items-center mr-10 ">
                <img src="https://cdn-icons-png.flaticon.com/128/3307/3307318.png" alt="Student Icon"
                    class="w-8 h-8 inline-block rounded mr-2">
                <div>
                    <p class="font-semibold  inline-block text-gray-800">
                        <%=name %>
                    </p>
                    <p class="text-gray-600">Educator ID:EDU<%= id %>
                    </p>
                </div>
            </div>
        </nav>





        <div class="container mx-auto p-8">
            <h2 class="text-2xl font-semibold mb-6">Create New Course</h2>
            <div class="bg-white p-4 mt-8  mb-5 rounded-md w-1/2">

                <!-- Course Creation Form -->
                <form action="/course" method="post">
                    <!-- Course Name -->
                    <div class="mb-4">
                        <label for="courseName" class="block text-gray-600 text-sm font-medium mb-2">Course
                            Name</label>
                        <input type="text" id="courseName" name="courseName"
                            class="w-full border-gray-300  border-4 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500"
                            required>
                    </div>

                    <!-- Course Description -->
                    <div class="mb-4">
                        <label for="courseDescription" class="block text-gray-600 text-sm font-medium mb-2">Course
                            Description</label>
                        <textarea type="text" id="courseDescription" name="courseDescription" rows="3"
                            class="w-full border-gray-300 border-4 rounded-md px-3 py-2 resize-none focus:outline-none focus:border-blue-500"
                            required></textarea>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit"
                        class="w-full bg-blue-500 text-white rounded-md py-2 hover:bg-blue-600 transition duration-300">Create
                        Course</button>
                </form>
            </div>
        </div>
        <div class="container mx-auto p-8">
            <h2 class="text-2xl font-semibold mb-8">Created Courses</h2>
            <div class="grid grid-cols-1 gap-4"> <!-- Use grid for vertical alignment with a gap of 4 units -->
                <% for( var i=0; i < createdCourses.length; i++) { %>

                    <div class="bg-white flex ml-10 mt-5 p-4 w-full rounded-md">
                        <div class="inline-block">
                            <h3 class="text-lg font-semibold mb-2">
                                <%= i+1 %> : <%= createdCourses[i].name %>
                            </h3>
                        </div>

                        <div class="flex-grow"></div> <!-- This will push the buttons to the right -->

                        <div class="flex justify-end items-center space-x-4">
                            <a href="/course/<%= createdCourses[i].id %>">
                                <div
                                    class="w-40 h-12 bg-green-300 text-white rounded-md px-4 py-3 cursor-pointer hover:bg-green-500 transition duration-300">
                                    <h3 class="text-sm font-semibold mb-2">
                                        Add Content....
                                    </h3>
                                </div>
                            </a>

                            <a href="/courseEnrollments/<%= createdCourses[i].id %>">
                                <div
                                    class="w-40 h-12 bg-blue-300 text-white rounded-md px-4 py-3 cursor-pointer hover:bg-blue-500 transition duration-300">
                                    <h3 class="text-sm font-semibold mb-2">
                                        View Enrollments...
                                    </h3>
                                </div>
                            </a>
                        </div>
                    </div>
                    <% } %>
            </div>

        </div>


        <%- include('footer.ejs') %>
</body>

</html>